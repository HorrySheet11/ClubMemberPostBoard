<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
</head>
<body>
  <h1>Sign Up</h1>
  <form action="/sign-up" method="POST" id="sign-up">
    <label for="firstname">First name</label><br>
    <input id="firstname" name="firstname" placeholder="firstname" type="text" required /><br>
    <label for="lastname">Last name</label><br>
    <input id="lastname" name="lastname" placeholder="lastname" type="text" required /><br>
    <label for="email">Email</label><br>
    <input type="email" name="email" id="email" placeholder="email" required><br>
    <label for="club-code">Club Code</label><br>
    <input id="club-code" name="club-code" type="text" required />
    <select name="status" id="status" >
      <option value="" disabled hidden selected>enter club code</option>
      <option id="bronze" value="Bronze" hidden>Bronze</option>
      <option id="silver" value="Silver" hidden>Silver</option>
      <option id="gold" value="Gold" hidden>Gold</option>
    </select><br>
    <button type="button" onclick="clubStatus()">Club verify</button><br>
    <label for="password">Password</label><br>
    <input id="password" name="password" type="password" required /><br>
    <label for="passwordConfirmation">Confirm Password</label><br>
    <input id="passwordConfirmation" name="passwordConfirmation" type="password" required /><br>
    <button type="submit">Sign Up</button>
  </form>
</body>
<script>
  const status = document.getElementById('status');
  const clubCode = document.getElementById('club-code');
  function clubStatus() {
    switch (clubCode.value) {
      case 'secret bronze code':
        document.getElementById('bronze').hidden = false;
        status.value = 'Bronze';
        alert('You are a bronze member of the club!');
        break;
      case 'secret silver code':
        document.getElementById('silver').hidden = false;
        status.value = 'Silver';
        alert('You are a silver member of the club!');
        break;
      case 'secret golden code':
        document.getElementById('gold').hidden = false;
        status.value = 'Gold';
        alert('You are a gold member of the club!');
        break;
    }
  }
  
</script>
</html>
